@model Clinic.Models.District

<h1>Создать новый район</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="DistrictNumber">Номер района:</label>
        <input asp-for="DistrictNumber" class="form-control" required/>
        <span asp-validation-for="DistrictNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId">Врач:</label>
        <select asp-for="DoctorId" class="form-control">
            @foreach(var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@($"{doctor.LastName} {doctor.FirstName} {doctor.MiddleName}")</option>
            }
        </select>
        <span asp-validation-for="DoctorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a href="@Url.Action("Index", "District")" class="btn btn-secondary ml-2">Отмена</a>
</form>

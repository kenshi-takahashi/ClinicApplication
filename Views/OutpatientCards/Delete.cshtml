@model Clinic.Models.OutpatientCard

@{
    ViewData["Title"] = "Удаление амбулаторной карты";
}

<h2>Удаление амбулаторной карты</h2>

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер карты
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class="col-sm-2">
            ФИО пациента
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a href="@Url.Action("Index", "OutpatientCards")" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>

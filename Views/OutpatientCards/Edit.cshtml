@model Clinic.Models.OutpatientCard

@{
    ViewData["Title"] = "Редактирование амбулаторной карты";
}

<h2>Редактирование амбулаторной карты</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="CardNumber" class="control-label">Номер карты</label>
        <input asp-for="CardNumber" class="form-control" />
        <span asp-validation-for="CardNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PatientId" class="control-label">ФИО пациента</label>
        <select asp-for="PatientId" class="form-control" asp-items="ViewBag.PatientId"></select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
        <a href="@Url.Action("Index", "OutpatientCards")" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

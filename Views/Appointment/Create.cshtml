@model Clinic.Models.Appointment

<h1>Добавление новой встречи</h1>

<form asp-action="Create" class="mt-4">
    <div class="form-group">
        <label asp-for="Description" class="font-weight-bold">Описание</label>
        <input asp-for="Description" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId" class="font-weight-bold">Врач</label>
        <select asp-for="DoctorId" class="form-control">
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@doctor.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PatientId" class="font-weight-bold">Пациент</label>
        <select asp-for="PatientId" class="form-control">
            @foreach (var patient in ViewBag.Patients)
            {
                <option value="@patient.Id">@patient.FullName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
    <a href="@Url.Action("Index", "Appointment")" class="btn btn-secondary ml-2">Отмена</a>
</form>

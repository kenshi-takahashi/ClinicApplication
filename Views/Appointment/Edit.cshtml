@model Clinic.Models.Appointment

<h1>Редактирование записи о приеме</h1>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" required/>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId">Врач</label>
        <select asp-for="DoctorId" class="form-control">
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@doctor.FullName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="PatientId">Пациент</label>
        <select asp-for="PatientId" class="form-control">
            @foreach (var patient in ViewBag.Patients)
            {
                <option value="@patient.Id">@patient.FullName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
    <a href="@Url.Action("Index", "Appointment")" class="btn btn-secondary">Отмена</a>
</form>

@model IEnumerable<Clinic.Models.RecordingMethod>

@{
    ViewData["Title"] = "Index";
    string GetSortArrow(string columnName)
    {
        if (ViewData["CurrentSort"] as string == columnName)
        {
            if ((string)ViewData["CurrentSort"] == "name_asc" || (string)ViewData["CurrentSort"] == "description_asc")
            {
                return "▼"; // Стрелка вниз
            }
            else
            {
                return "▲"; // Стрелка вверх
            }
        }
        else if (ViewData["CurrentSort"] as string == columnName.Replace("_asc", "_desc"))
        {
            return ""; // Стрелка вверх
        }
        return "";
    }
}

<h2>Методы ведения учёта</h2>

    <div>
        <form id="searchForm" asp-controller="RecordingMethods" asp-action="Index" method="get" class="form-inline">
            <div class="form-group" style="margin-bottom: 10px;">
                <label for="searchInput" class="mr-2">Поиск</label>
                <input id="searchInput" type="text" name="searchString" placeholder="Введите текст для поиска" class="form-control mr-2">
            </div>
            <div class="form-check form-check-inline">
                <input type="checkbox" name="filterName" value="true" class="form-check-input">
                <label class="form-check-label mr-2">Название</label>
                <select name="selectedName" class="form-control mr-2">
                    @foreach (var name in ViewBag.Name)
                    {
                        <option value="@name">@name</option>
                    }
                </select>
            </div>
            <div class="form-check form-check-inline">
                <input type="checkbox" name="filterDescription" value="true" class="form-check-input">
                <label class="form-check-label mr-2">Описание</label>
                <select name="selectedDescription" class="form-control mr-2">
                    @foreach (var description in ViewBag.Descriptions)
                    {
                        <option value="@description">@description</option>
                    }
                </select>
            </div>
            <button type="submit" class="btn btn-primary">Применить фильтры</button>
        </form>
        <p>Найдено записей: @ViewBag.ReasonsForVisitCount</p>
    </div>
    <div class="col-md-9" style="margin-top: 10px; margin-bottom: 10px;">
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Создать новую запись</a>
        }
    </div>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">
                    Название
                    @Html.Raw(GetSortArrow("name_asc") + GetSortArrow("name_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionSortParam"]">
                    Описание
                    @Html.Raw(GetSortArrow("description_asc") + GetSortArrow("description_desc"))
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

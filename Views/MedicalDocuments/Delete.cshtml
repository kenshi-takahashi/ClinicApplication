@model Clinic.Models.MedicalDocument

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление медицинского документа</h1>

<h3>Вы уверены, что хотите удалить этот документ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            ФИО пациента
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.FullName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Удалить" class="btn btn-danger" />
            <a href="@Url.Action("Index", "MedicalDocuments")" class="btn btn-secondary">Отмена</a>
        </div>
    </form>
</div>


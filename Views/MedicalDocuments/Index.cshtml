@model IEnumerable<Clinic.Models.MedicalDocument>

@{
    ViewData["Title"] = "Index";
    string GetSortArrow(string columnName)
    {
        if (ViewData["CurrentSort"] as string == columnName)
        {
            if ((string)ViewData["CurrentSort"] == "name_asc" || (string)ViewData["CurrentSort"] == "description_asc" || (string)ViewData["CurrentSort"] == "patient_asc")
            {
                return "▼"; // Стрелка вниз
            }
            else
            {
                return "▲"; // Стрелка вверх
            }
        }
        else if (ViewData["CurrentSort"] as string == columnName.Replace("_asc", "_desc"))
        {
            return "▲"; // Стрелка вверх
        }
        return "";
    }
}

<h1>Медицинские документы</h1>

<p>
    <form id="searchForm" asp-controller="MedicalDocuments" asp-action="Index" method="get">
        <div  class="form-group" style="margin-bottom: 10px;">
            <label for="searchInput" class="mr-2">Поиск</label>
            <input id="searchInput" type="text" name="searchString" placeholder="Введите текст для поиска" class="form-control mr-2">
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterName" value="true" class="form-check-input"><label class="form-check-label mr-2">Название документа</label>
            <select name="selectedName" class="form-control mr-2">
                @foreach (var name in ViewBag.Name)
                {
                        <option value="@name">@name</option>
                }
            </select>
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterDescription" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Описание документа</label>
            <select name="selectedDescription" class="form-control mr-2">
                @foreach (var description in ViewBag.Description)
                {
                        <option value="@description">@description</option>
                }
            </select>
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterPatient" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Пациент</label>
            <select name="selectedPatient" class="form-control mr-2">
                @foreach (var patient in ViewBag.Patient)
                {
                        <option value="@patient">@patient</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Применить фильтры</button>
        <p>Найдено записей: @ViewBag.medicalDocumentsCount</p>
    </form>
    <div class="col-md-9" style="margin-top: 10px; margin-bottom: 10px;">
        @if (User.IsInRole("admin"))
        {
                <a asp-action="Create" class="btn btn-primary">Создать новую запись</a>
        }
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Название @Html.Raw(GetSortArrow("name_asc"))</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DescriptionSortParam"]">Описание @Html.Raw(GetSortArrow("description_asc"))</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["PatientSortParam"]">Пациент @Html.Raw(GetSortArrow("patient_asc"))</a>
            </th>
            @if (User.IsInRole("admin"))
            {
                <th>Действия</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.Patient.FullName
                </td>
                @if (User.IsInRole("admin"))
                    {
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                        </td>
                    }
            </tr>
        }
    </tbody>
</table>

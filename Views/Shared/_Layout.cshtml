@using Clinic.Helpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Сlinic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Сlinic.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar box-shadow mb-3 bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Сlinic</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-switch">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Таблицы
                        </a>
                        <div class="dropdown-menu dropdown-menu-animated" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-area="" asp-controller="Doctors" asp-action="Index">Доктора</a>
                            <a class="dropdown-item" asp-area="" asp-controller="DisabilitySheet" asp-action="Index">Листы нетрудоспособности</a>
                            <a class="dropdown-item" asp-area="" asp-controller="District" asp-action="Index">Районы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="DoctorSpecialties" asp-action="Index">Специальзации докторов</a>
                            <a class="dropdown-item" asp-area="" asp-controller="MedicalDocuments" asp-action="Index">Медицинские документы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="OutpatientCards" asp-action="Index">Амбулаторные карты</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Patients" asp-action="Index">Пациенты</a>
                            <a class="dropdown-item" asp-area="" asp-controller="ReasonsForVisit" asp-action="Index">Причины визитов</a>
                            <a class="dropdown-item" asp-area="" asp-controller="RecordingMethods" asp-action="Index">Методы ведения учёта</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Registrars" asp-action="Index">Регистраторы</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Registry" asp-action="Index">Регистратура</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Schedule" asp-action="Index">Расписания</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Tickets" asp-action="Index">Талоны</a>
                        </div>
                    </li>
                </ul>
                <div style="margin-left: auto;">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div id="userMenu" style="cursor: pointer">
                            <span class="nav-link theme-text-color" onclick="toggleMenu()">
                                @Html.GetUserName()
                            </span>
                        </div>

                        <div id="logoutMenu" class="hidden bg-dark">
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display: flex; flex-direction: column; flex-wrap: wrap;">
                                <button type="submit" class="btn btn-primary">Выйти</button>
                            </form>
                            <button id="theme-toggle" class="btn btn-sm btn-dark">Toggle Theme</button>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a class="nav-link text-switch" asp-controller="Account" asp-action="Login">Войти</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Сlinic - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

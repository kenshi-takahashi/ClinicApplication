@model IEnumerable<Clinic.Models.Ticket>

@{
    ViewData["Title"] = "Талоны";
    string GetSortArrow(string columnName)
    {
        if (ViewData["CurrentSort"] as string == columnName)
        {
            if ((string)ViewData["CurrentSort"] == "doctor_asc" || (string)ViewData["CurrentSort"] == "appointment_date_asc" || (string)ViewData["CurrentSort"] == "appointment_time_asc")
            {
                return "▼"; // Стрелка вниз
            }
            else
            {
                return "▲"; // Стрелка вверх
            }
        }
        else if (ViewData["CurrentSort"] as string == columnName.Replace("_asc", "_desc"))
        {
            return ""; // Стрелка вверх
        }
        return "";
    }
}

<h2>Талоны</h2>

<p>
    <a asp-action="Create">Добавить талон</a>
</p>
<form id="searchForm" asp-controller="Tickets" asp-action="Index" method="get">
    <p>
        <input id="searchInput" type="text" name="searchString" placeholder="Поиск">
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DoctorSortParam"]">
                    Врач
                    @Html.Raw(GetSortArrow("doctor_asc") + GetSortArrow("doctor_desc"))
                </a>
            </th>
            <th>
                Специальность
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AppointmentDateSortParam"]">
                    Дата приема
                    @Html.Raw(GetSortArrow("appointment_date_asc") + GetSortArrow("appointment_date_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["AppointmentTimeSortParam"]">
                    Время приема
                    @Html.Raw(GetSortArrow("appointment_time_asc") + GetSortArrow("appointment_time_desc"))
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Doctor.Specialty.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AppointmentTime)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@model Clinic.Models.Ticket

@{
    ViewData["Title"] = "Удаление талона";
}

<h2>Удаление талона</h2>

<h3>Вы уверены, что хотите удалить этот талон?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Врач
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FullName)
        </dd>
        <dt class="col-sm-2">
            Специальность
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Specialty.Name)
        </dd>
        <dt class="col-sm-2">
            Дата приема
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentDate)
        </dd>
        <dt class="col-sm-2">
            Время приема
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppointmentTime)
        </dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

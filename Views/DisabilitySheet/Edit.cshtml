@model Clinic.Models.DisabilitySheet

<h1>Редактирование информации о листе нетрудоспособности</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="SheetNumber">Номер листа нетрудоспособности</label>
        <input asp-for="SheetNumber" class="form-control" required/>
        <span asp-validation-for="SheetNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IssueDate">Дата выдачи</label>
        <input asp-for="IssueDate" class="form-control" required/>
        <span asp-validation-for="IssueDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DoctorId" class="font-weight-bold">Врач</label>
        <select asp-for="DoctorId" class="form-control">
            @foreach (var doctor in ViewBag.Doctors)
            {
                <option value="@doctor.Id">@doctor.FullName</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a href="@Url.Action("Index", "DisabilitySheet")" class="btn btn-secondary ml-2">Отмена</a>
</form>
@model Clinic.Models.Registrar

@{
    ViewData["Title"] = "Редактирование регистратора";
}

<h2>Редактирование регистратора</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Фамилия</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">Имя</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label">Отчество</label>
        <input asp-for="MiddleName" class="form-control" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RegistryId" class="control-label">
        Подразделение
        </label>
        <select asp-for="RegistryId" class="form-control" asp-items="ViewBag.RegistryId"></select>
        <span asp-validation-for="RegistryId" class="text-danger"></span>
    </div> 
    <div class="form-group"> 
        <input type="submit" value="Сохранить" class="btn btn-primary" /> 
        <a href="@Url.Action("Index", "Registrars")" class="btn btn-secondary">Отмена</a> 
    </div> 
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
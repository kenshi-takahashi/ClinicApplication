@model IEnumerable<Clinic.Models.Registrar>

@{
    ViewData["Title"] = "Index";
    string GetSortArrow(string columnName)
    {
        if (ViewData["CurrentSort"] as string == columnName)
        {
            if ((string)ViewData["CurrentSort"] == "lastname_asc" || (string)ViewData["CurrentSort"] == "firstname_asc" || (string)ViewData["CurrentSort"] == "middlename_asc" || (string)ViewData["CurrentSort"] == "subdivision_asc")
            {
                return "▼"; // Стрелка вниз
            }
            else
            {
                return "▲"; // Стрелка вверх
            }
        }
        else if (ViewData["CurrentSort"] as string == columnName.Replace("_asc", "_desc"))
        {
            return ""; // Стрелка вверх
        }
        return "";
    }
}

<h2>Регистраторы</h2>

<p>
    <a asp-action="Create">Добавить регистратора</a>
</p>
<form id="searchForm" asp-controller="Registrars" asp-action="Index" method="get">
    <p>
        <input id="searchInput" type="text" name="searchString" placeholder="Поиск">
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParam"]">
                    Фамилия
                    @Html.Raw(GetSortArrow("lastname_asc") + GetSortArrow("lastname_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParam"]">
                    Имя
                    @Html.Raw(GetSortArrow("firstname_asc") + GetSortArrow("firstname_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MiddleNameSortParam"]">
                    Отчество
                    @Html.Raw(GetSortArrow("middlename_asc") + GetSortArrow("middlename_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SubdivisionSortParam"]">
                    Подразделение
                    @Html.Raw(GetSortArrow("subdivision_asc") + GetSortArrow("subdivision_desc"))
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registry.SubdivisionName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

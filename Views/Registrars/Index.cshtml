@model IEnumerable<Clinic.Models.Registrar>

@{
    ViewData["Title"] = "Index";
    string GetSortArrow(string columnName)
    {
        if (ViewData["CurrentSort"] as string == columnName)
        {
            if ((string)ViewData["CurrentSort"] == "lastname_asc" || (string)ViewData["CurrentSort"] == "firstname_asc" || (string)ViewData["CurrentSort"] == "middlename_asc" || (string)ViewData["CurrentSort"] == "subdivision_asc")
            {
                return "▼"; // Стрелка вниз
            }
            else
            {
                return "▲"; // Стрелка вверх
            }
        }
        else if (ViewData["CurrentSort"] as string == columnName.Replace("_asc", "_desc"))
        {
            return ""; // Стрелка вверх
        }
        return "";
    }
}

<h2>Регистраторы</h2>

<p>
    <form id="searchForm" asp-controller="Registrars" asp-action="Index" method="get">
        <div class="form-group" style="margin-bottom: 10px;">
            <label for="searchInput" class="mr-2">Поиск</label>
            <input id="searchInput" type="text" name="searchString" placeholder="Введите текст для поиска" class="form-control mr-2">
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterLastName" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Фамилия</label>
            <select name="selectedLastName" class="form-control mr-2">
                @foreach (var lastName in ViewBag.LastNames)
                {
                    <option value="@lastName">@lastName</option>
                }
            </select>
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterFirstName" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Имя</label>
            <select name="selectedFirstName" class="form-control mr-2">
                @foreach (var firstName in ViewBag.FirstNames)
                {
                    <option value="@firstName">@firstName</option>
                }
            </select>
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterMiddleName" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Отчество</label>
            <select name="selectedMiddleName" class="form-control mr-2">
                @foreach (var middleName in ViewBag.MiddleNames)
                {
                    <option value="@middleName">@middleName</option>
                }
            </select>
        </div>
        <div class="form-check form-check-inline">
            <input type="checkbox" name="filterSubdivisionName" value="true" class="form-check-input">
            <label class="form-check-label mr-2">Подразделение</label>
            <select name="selectedSubdivisionName" class="form-control mr-2">
                @foreach (var subdivisionName in ViewBag.SubdivisionNames)
                {
                    <option value="@subdivisionName.Id">@subdivisionName.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary" style="margin-top: 10px;">Применить фильтры</button>
        <p>Найдено записей: @ViewBag.registrarsCount</p>
    </form>
    <div class="col-md-9" style="margin-top: 10px; margin-bottom: 10px;">
        @if (User.IsInRole("admin"))
        {
            <a asp-action="Create" class="btn btn-primary">Создать новую запись</a>
        }
    </div>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LastNameSortParam"]">
                    Фамилия
                    @Html.Raw(GetSortArrow("lastname_asc") + GetSortArrow("lastname_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FirstNameSortParam"]">
                    Имя
                    @Html.Raw(GetSortArrow("firstname_asc") + GetSortArrow("firstname_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["MiddleNameSortParam"]">
                    Отчество
                    @Html.Raw(GetSortArrow("middlename_asc") + GetSortArrow("middlename_desc"))
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["SubdivisionSortParam"]">
                    Подразделение
                    @Html.Raw(GetSortArrow("subdivision_asc") + GetSortArrow("subdivision_desc"))
                </a>
            </th>
            <th>Действия</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registry.SubdivisionName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

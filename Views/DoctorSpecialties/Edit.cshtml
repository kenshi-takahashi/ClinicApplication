@model Clinic.Models.DoctorSpecialty

<h1>Редактирование специальзации</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название специальзации</label>
        <input asp-for="Name" class="form-control" required/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание специальзации</label>
        <input asp-for="Description" class="form-control" required/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary"/>
        <a href="@Url.Action("Index", "DoctorSpecialties")" class="btn btn-secondary">Отмена</a>
    </div>
</form>
